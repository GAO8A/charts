{
  "name": "@ibm-design/charts-line",
  "version": "0.0.0",
  "main": "dist/charts-line.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "babel src -d dist",
    "build:css": "node-sass --output-style compressed src/*.scss > dist/ibm-charts-line.css",
    "build": "npm run clean && yarn build:js && yarn build:css",
    "watch:scss": "nodemon -e scss -x \"yarn build:css\"",
    "watch:js": "babel src --watch -d dist",
    "watch": "yarn watch:js & yarn watch:scss & live-server --watch=\"index.html,dist\" --wait=1000",
    "start": "http-server -c-1 ./",
    "start:dev": "yarn watch"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "c3": "^0.4.11",
    "d3": "^4.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-latest": "^6.24.0",
    "http-server": "^0.9.0",
    "live-server": "^1.2.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1"
  }
}
